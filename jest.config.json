{
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "mapCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "coveragePathIgnorePatterns": [
    "/test/",
    "/node_modules/"
  ],
  "testEnvironment": "node",
  "testRegex": "test/.*\\.test\\.js$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ]
}